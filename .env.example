# Frontend Environment Variables
# Copy this file to .env for local development
# For production, use .env.production

# Application URLs
NUXT_PUBLIC_BASE_URL=http://localhost:3000
NUXT_PUBLIC_API_BASE=http://localhost:8000

# Authentication
NUXT_AUTH_BASE_URL=http://localhost:3000/api/auth
NUXT_AUTH_SECRET=your-generated-secret-here

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Pusher (Real-time features)
NUXT_PUBLIC_PUSHER_KEY=your-pusher-key
NUXT_PUBLIC_PUSHER_CLUSTER=ap2
NUXT_PUBLIC_PUSHER_SECRET=your-pusher-secret

# Google Analytics & Tag Manager
NUXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NUXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# WebSocket Configuration
NUXT_PUBLIC_WS_HOST=http://localhost:8000
NUXT_PUBLIC_WS_PORT=6001
NUXT_PUBLIC_WS_PROTOCOL=ws

# Email Configuration (for Magic Links)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@example.com
